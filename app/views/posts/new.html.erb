<%= form_with scope: :post, url: posts_path, local: true do |form| %>

    <p>
        <%= form.label :title %>
        <%= form.text :title %>
    </p>

    <p>
        <%= form.label :photo_url %>
        <%= form.text :photo_url %>
    </p>

    <p>
        <%= form.label :author_name %>
        <%= form.text :author_name %>
    </p>

<% end %>